{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/js/*"],
      "@shared/*": ["./src/js/shared/*"],
      "@panels/*": ["./src/js/panels/*"],
      "@lib/*": ["./src/js/lib/*"],
      "@utils/*": ["./src/js/utils/*"],
      "@hooks/*": ["./src/js/hooks/*"],
    },
  },
  "include": ["src", "src/shared/universals.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }],
}

